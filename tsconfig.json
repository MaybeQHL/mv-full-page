{
    "compilerOptions": {
        "target": "esnext",
        "useDefineForClassFields": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "jsx": "preserve",
        "sourceMap": true,
        "resolveJsonModule": true,
        "allowJs": true,
        "lib": [
            "esnext",
            "dom"
        ],
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ],
            "$/*": [
                "lib/*"
            ],
            "_conf/*": [
                "build/*"
            ]
        }
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
        "build/**/*",
        "./*.ts",
        "lib/**/*.ts",
        "lib/**/*.d.ts",
        "lib/**/*.tsx",
        "lib/**/*.vue",
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}